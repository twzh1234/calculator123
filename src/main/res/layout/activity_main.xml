<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/et_input"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:gravity="right|bottom"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:textSize="50sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bt_sqrt"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="Sqrt" />

            <Button
                android:id="@+id/bt_tan"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="tan" />

            <Button
                android:id="@+id/bt_log1p"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="log1p" />

            <Button
                android:id="@+id/bt_factortial"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="!" />

            <Button
                android:id="@+id/bt_ATAN"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="atan" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_clr"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="AC" />

            <Button
                android:id="@+id/bt_del"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="delete" />

            <Button
                android:id="@+id/bt_exp"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="e^x" />

            <Button
                android:id="@+id/bt_Asin"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="Asin" />

            <Button
                android:id="@+id/bt_Acos"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="Acos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="1" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="2" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="3" />

            <Button
                android:id="@+id/bt_mul"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="ร" />

            <Button
                android:id="@+id/bt_log10"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="log10" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="4" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="5" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="6" />

            <Button
                android:id="@+id/bt_div"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="รท" />

            <Button
                android:id="@+id/bt_ln"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="ln" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="7" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="8" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="9" />

            <Button
                android:id="@+id/bt_add"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="+" />

            <Button
                android:id="@+id/bt_sin"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="sin" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_pt"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="." />

            <Button
                android:id="@+id/bt_0"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="0" />

            <Button
                android:id="@+id/bt_eq"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="=" />

            <Button
                android:id="@+id/bt_sub"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="-" />

            <Button
                android:id="@+id/bt_cos"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:text="cos" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableRow>
    </TableLayout>

</LinearLayout>